        <module>utils/bluima_test_helper</module>
        <module>utils/blue_commons</module>
        <module>utils/pdf_glyph_mapping</module>
        <module>utils/mallet_utils</module>
        <module>modules/bluima_typesystem</module>

        <module>modules</module>
